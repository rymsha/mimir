<part>
    <display-name>Markdown</display-name>
    <form>
        <field-set>
			<label>
				Markdown tekst
			</label>
			<items>
				<input name="markdownText" type="TextArea">
					<occurrences minimum="0" maximum="1" />
					<label>
						Markdown
					</label>
				</input>
				<input name="markdownFile" type="CustomSelector">
					<label>Markdown file</label>
					<occurrences minimum="0" maximum="1"/>
					<config>
						<service>markdown</service>
					</config>
				</input>
			</items>
		</field-set>
    </form>
</part>
